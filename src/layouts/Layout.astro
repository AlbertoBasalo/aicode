---

import "@picocss/pico";
import "../styles/colors.css";
import "../styles/custom.css";
import "../styles/global.css";


// import CookieConsent from "./CookieConsent.astro";
import Footer from "./Footer.astro";
import Head from "./Head.astro";
import Header from "./Header.astro";

export type LayoutProps=  {
  title: string;
  description: string;
}

const { layout } = Astro.props as { layout: LayoutProps };
---

<!doctype html>
<html
  lang="es"
  data-theme="dark">
  <Head
    title={layout.title}
    description={layout.description}
  />
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    
    <script>
      const getTheme = () => document.documentElement.getAttribute("data-theme");
      const setTheme = (theme) => document.documentElement.setAttribute("data-theme", theme);

      document.addEventListener("theme-toggle", () => {
        const currentTheme = getTheme();
        setTheme(currentTheme === "dark" ? "light" : "dark");
      });
    </script>
    
  </body>
</html>
