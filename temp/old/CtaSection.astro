---
interface Props {
  title?: string;
  description?: string;
  buttonText?: string;
  buttonLink?: string;
}

const {
  title = "Ready to transform your career?",
  description = "AI will not take your job, but it will change it forever.",
  buttonText = "View Our Programs",
  buttonLink = "/courses"
} = Astro.props;
---

<div class="cta-container matrix-shadow">
  <h2>{title}</h2>
  <p>{description}</p>
  <a href={buttonLink} class="cta-button">{buttonText}</a>
</div>

<style>
  .cta-container {
    padding: 3rem 2rem;
    text-align: center;
    border: 1px solid var(--brand-color);
  }

  .cta-container h2 {
    margin-bottom: 1rem;
  }

  .cta-container p {
    margin-bottom: 2rem;
    font-size: 1.2rem;
  }
</style> 