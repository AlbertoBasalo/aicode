---
type NavItem = {
  href: string;
  text: string;
  external?: boolean;
};
const navItems: NavItem[] = [
  { href: '/blog/es', text: 'Blog' },
  { href: '/cursos', text: 'Cursos' },
  { href: '/meetups/v01', text: 'Meetups' },
];
---

<header>
  <nav>
    <ul>
      <li><strong><a href="/" class="logo">Ai code Academy</a></strong></li>
    </ul>
    <ul>
      {navItems.map(item => (
        <li>
          <a href={item.href} {...item.external && { target: '_blank', rel: 'noopener' }}>{item.text}</a>
        </li>
      ))}
      <li>
        <span id="theme-toggle" aria-label="Toggle theme">
          <span class="light">ðŸ”³</span>
          <span class="dark">ðŸ”²</span>
        </span>
      </li>
    </ul>
  </nav>
</header>

<style>
  header {
    border-bottom: 1px solid var(--pico-primary);
    margin-bottom: 1rem;
  }
</style>

<script>
  const getTheme = () => document.documentElement.getAttribute("data-theme");
  const setTheme = (theme) => document.documentElement.setAttribute("data-theme", theme);
  document.getElementById('theme-toggle')?.addEventListener('click', () => {
    const currentTheme = getTheme();
    const newTheme = currentTheme === "dark" ? "light" : "dark";
    setTheme(newTheme);
  });
</script>


