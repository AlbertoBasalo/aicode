---
interface Testimonial {
  quote: string;
  author: string;
  role: string;
}

const testimonials: Testimonial[] = [
  {
    quote: "AI Code Academy transformed my career. I'm now working as an AI Engineer at a top tech company.",
    author: "Sarah Chen",
    role: "AI Engineer"
  },
  {
    quote: "The practical approach to learning AI development here is unmatched.",
    author: "James Wilson",
    role: "ML Researcher"
  }
];
---

<div class="testimonials-container">
  <h2>Student Success Stories</h2>
  <div class="testimonials-grid">
    {testimonials.map(({ quote, author, role }) => (
      <blockquote class="testimonial matrix-shadow">
        <p>"{quote}"</p>
        <cite>- {author}, {role}</cite>
      </blockquote>
    ))}
  </div>
</div>

<style>
  .testimonials-container {
    margin-bottom: 3rem;
  }

  .testimonials-container h2 {
    text-align: center;
    margin-bottom: 2rem;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .testimonial {
    padding: 2rem;
    border: 1px solid var(--brand-color);
  }

  .testimonial p {
    margin-bottom: 1rem;
    font-family: var(--mono-font);
  }

  .testimonial cite {
    color: var(--brand-color);
    font-style: normal;
    font-family: var(--mono-font);
  }
</style> 