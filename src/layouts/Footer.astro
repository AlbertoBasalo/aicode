---
const currentYear = new Date().getFullYear();

const links = [
  { href: "https://github.com/AlbertoBasalo", text: "GitHub" },
  { href: "https://linkedin.com/in/albertobasalo", text: "LinkedIn" },
  { href: "https://twitter.com/AlbertoBasalo", text: "Twitter" },
];

const legalLinks = [
  { href: "https://albertobasalo.dev/#contact", text: "Contact" },
  { href: "/legal/privacy/", text: "Privacy Policy" },
  { href: "/legal/terms/", text: "Terms of Service" },
  { href: "/legal/cookies/", text: "Cookie Policy" },
];
---

<footer class="container">
  <main class="grid">
    <div >
      <h3 class="logo">Ai code Academy</h3>
      <p>Learn to code smarter.</p>
    </div>
    <div >
      <h3>Connect</h3>
      <ul>
        <!--<li><a href="https://aiddbot.com" target="_blank"><b>AIDDbot </b></a></li>-->
        {links.map(link => (
          <li><a href={link.href} target="_blank">{link.text}</a></li>
        ))}
      </ul>
    </div>
    <div >
      <h3>Legal</h3>
      <ul>
        {legalLinks.map(link => (
          <li><a href={link.href} target="_blank">{link.text}</a></li>
        ))}
      </ul>
    </div>
  </main>
  <div>
   <p>&copy; {currentYear} AI Code Academy. All rights reserved.</p>
  </div>
</footer>

<style>
  footer {
    border-top: 1px solid var(--pico-primary);
    margin-top: 1rem;
  }
</style>
