---
import { getEntry } from "astro:content";
const marketingData = await getEntry('site', 'marketing');
const { features } = marketingData.data;
---


<div class="value-prop matrix-shadow">
      <h2>Why Choose AI Code Academy?</h2>
      <div class="features-grid">
        {features.map(feature => (
          <div class="feature">
            <h3>{feature.title}</h3>
            <p>{feature.description}</p>
          </div>
        ))}
  </div>
</div>

<style>
   .value-prop {
    padding: 2rem;
    margin-bottom: 3rem;
    border: 1px solid var(--brand-color);
  }

  .value-prop h2 {
    text-align: center;
    margin-bottom: 2rem;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .feature h3 {
    margin-bottom: 1rem;
    color: var(--brand-color);
  }
</style>
